{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "inlineSources": true,
        "strictNullChecks": true,
        "target": "es5",
        "outDir": "dist",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["es2015", "dom"],
        "rootDir": "src",
        "baseUrl": "src",
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
